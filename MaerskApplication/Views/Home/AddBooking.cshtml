@using MaerskApplication.Models.ViewModel
@model BookingViewModel
@{
    ViewBag.Title = "Book Shipping";
}

<h2>Book Shipping</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("AddBooking", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Customer Id", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.CustomerId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CustomerId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Shipping Id", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ShippingId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ShippingId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Slots Required", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Slots, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Slots, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" style="color:red">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        @ViewBag.Message
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Book Shipping" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}